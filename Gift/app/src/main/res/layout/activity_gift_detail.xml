<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    tools:context="com.custome_componence.sampleusingobjectorientationpattern.sample.GiftDetail">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_field_margin">
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/userimage"
            android:src="@mipmap/user1"/>
        <TextView
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:layout_marginTop = "25dp"
            android:textColor="#000"
            android:layout_marginLeft = "90dp"
            android:id="@+id/username"
            android:text="Sreyleak"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="90dp"
            android:id="@+id/date"
            android:text="2015-06-09"/>
     </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/giftimage"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:src="@mipmap/flowers1"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:text="Category :"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Birthday"
            android:layout_marginLeft="70dp"
            android:id="@+id/category"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="30dp"
            android:textColor="#000"
            android:text="Received Date : "/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2015"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="30dp"
            android:id="@+id/receive_date"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="60dp"
            android:textColor="#000"
            android:layout_alignParentRight="true"
            android:text="From "/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Family"
            android:layout_alignParentRight="true"
            android:id="@+id/from"/>
        </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/activity_field_margin"
        android:text="Hello my name is jojo"
        android:layout_height="170dp"
        android:id="@+id/description" />
</LinearLayout>
