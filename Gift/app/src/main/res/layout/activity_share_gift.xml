<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/giftimage"
        android:layout_marginTop="@dimen/activity_field_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:src="@mipmap/christmas_18"/>
    <Button
        android:layout_width="351dp"
        android:layout_height="50dp"
        android:background="@drawable/button_bg"
        android:id="@+id/btnchooseimage"
        android:text="Choose Image Gift"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:textColor="#fff" />
    <EditText
        android:layout_width="354dp"
        android:layout_height="50dp"
        android:background="@drawable/form_bg"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:id="@+id/description"
        android:hint="Description"/>
    <Spinner
        android:layout_width="354dp"
        android:layout_height="50dp"
        android:background="@drawable/form_bg"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:id="@+id/category"
        android:spinnerMode="dialog" />
    <Spinner
        android:layout_width="354dp"
        android:layout_height="50dp"
        android:background="@drawable/form_bg"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:id="@+id/from"
        android:spinnerMode="dialog" />
    <LinearLayout
        android:layout_width="354dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"

        >
        <EditText
            android:layout_width="303dp"
            android:layout_height="50dp"
            android:background="@drawable/form_bg"
            android:gravity="center"
            android:hint="Reveived Date"
            android:id="@+id/receive_date"
 />

        <ImageView
            android:layout_width="65dp"
            android:layout_height="match_parent"
            android:id="@+id/imgcalendar"
            android:src="@mipmap/calendar"/>
    </LinearLayout>
    <Button
        android:layout_width="351dp"
        android:layout_height="50dp"
        android:background="@drawable/button_bg"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="Share Gift"


        android:id="@+id/btnshare"
        android:textColor="#fff" />

</LinearLayout>
